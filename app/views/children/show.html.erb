<div class="md:w-2/3 w-full min-h-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
</div>

<div class="min-h-full">
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Dashboard</h1>
        <%= render @child %>

      <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
        <%= link_to "Edit this child", edit_child_path(@child), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-2">
          <%= button_to "Destroy this child", child_path(@child), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
        </div>
        <%= link_to "Back to children", children_path, class: "ml-2 text-xs rounded-md py-3 px-5 bg-gray-100 inline-block font-medium" %>

         <%= link_to "Back to children", children_path, class: "px-2 py-1  font-medium text-center text-white bg-blue-700 rounded-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>

    </div>
  </header>
  <main>
    <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
      <!-- Features Section -->
      <section class="py-12">
        <div class="container mx-auto">
          <%= turbo_frame_tag "new_entry" do %>
            <%= form_with model: [@child, Entry.new], target: "entries" do |form| %>
              <%= form.hidden_field :child_id, value: @child.id %>
              <%#= form.hidden_field :prompt_id, value: 1 %>
              <div class="flex flex-col">
                <%= form.label :response, class: "mb-2 text-sm font-medium text-gray-900" %>
                <%= form.text_area :response, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>

              <div class="flex flex-col">
                <%= form.label :notes, class: "mb-2 text-sm font-medium text-gray-900" %>
                <%= form.text_area :notes, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>
              <%= form.submit "Submit", class: "px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-700" %>
            <% end %>
          <% end %>
        </div>
      </section>

      <!-- Testimonials Section -->
      <section class="py-12 bg-gray-100">
        <div class="container mx-auto">
          <div>
            <h2 class="text-3xl font-bold text-center">Entries </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 mt-6 ">
              <%= turbo_frame_tag "entries" do %>
                <%= render @child.entries %>
              <% end %>
          </div>
        </div>
      </section>

      <!-- Call-to-Action Section -->
      <section class="py-12">
        <div class="container mx-auto text-center">
          <h2 class="text-3xl font-bold">Ready to Start?</h2>
          <button class="mt-4 px-6 py-2 bg-green-500 text-white rounded">Sign Up Now</button>
        </div>
      </section>
    </div>
  </main>
</div>
