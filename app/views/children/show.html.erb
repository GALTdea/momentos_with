<div class="md:w-2/3 w-full min-h-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
</div>

<div class="min-h-full">
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= @child.name %></h1>
        <p class="my-5">
          <%= @child.description %>
        </p>

      <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
        <%= link_to "Edit this child", edit_child_path(@child), class: "ml-2 p-2 text-xs rounded-md bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-2">
          <%= button_to "Destroy this child", child_path(@child), method: :delete, class: "ml-2 p-2 text-xs rounded-md bg-gray-100 inline-block font-medium" %>
        </div>
        <%= link_to "Back to children", children_path, class: "ml-2 p-2 text-xs rounded-md bg-gray-100 inline-block font-medium" %>
      </div>
    </div>
  </header>
  <main>
    <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
      <!-- Features Section -->
      <section class="py-12">
        <p class="text-2xl"><%= link_to @entry_to_complete.prompt.question, edit_child_entry_path(@child, @entry_to_complete) %></p>
      </section>

      <!-- Testimonials Section -->
      <section class="py-12 bg-gray-100">
        <div class="container mx-auto">
          <h2 class="text-3xl font-bold text-center">Entries</h2>
          <div class="grid grid-cols-4 gap-4 sm:grid-cols-4 mt-6">
            <%= turbo_frame_tag "entries" do %>
              <%= render @child.entries %>
            <% end %>
          </div>
        </div>
      </section>

      <!-- Call-to-Action Section -->
      <section class="py-12">
        <div class="container mx-auto text-center">
          <h2 class="text-3xl font-bold">Ready to Start?</h2>
          <button class="mt-4 px-6 py-2 bg-green-500 text-white rounded">Sign Up Now</button>
        </div>
      </section>
    </div>
  </main>
</div>
