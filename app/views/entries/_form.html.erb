
<%= turbo_frame_tag "new_entry" do %>
  <%= form_with model: [@child, Entry.new], target: "entries" do |form| %>
    <%= form.hidden_field :child_id, value: @child.id %>
    <%#= form.hidden_field :prompt_id, value: 1 %>
    <div class="flex flex-col">
      <%= form.label :response, class: "mb-2 text-sm font-medium text-gray-900" %>
      <%= form.text_area :response, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :notes, class: "mb-2 text-sm font-medium text-gray-900" %>
      <%= form.text_area :notes, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <%= form.submit "Submit", class: "px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-700" %>
  <% end %>
<% end %>



